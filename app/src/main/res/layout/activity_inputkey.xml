<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InputkeyActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/welcomeRoom"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textAppearance="@style/TextAppearance.Reply.Headline5"
        android:textSize="25dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/statusRoom"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/welcomeRoom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textAppearance="@style/TextAppearance.Reply.Headline6"
        android:textSize="25dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/iKey"
        android:layout_below="@+id/statusRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:hint="Nhập khóa phòng">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/iKey"
        android:layout_centerHorizontal="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iKey"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:text="Trang chủ" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/joinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iKey"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:text="Tham gia" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/scanBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/iKey"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245dp"
        android:background="@drawable/btnscan"
        android:src="@drawable/outline_qr_code_scanner_white_48"></ImageButton>





</RelativeLayout>