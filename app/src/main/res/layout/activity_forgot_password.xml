<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VerifyPhoneNumber"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="180dp"
        android:layout_marginHorizontal="24dp"
        android:text="Xác nhận số điện thoại"
        android:textColor="@color/reply_black_900"
        android:textSize="25dp"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:hint="Số điện thoại"
        app:counterMaxLength="10"
        app:counterEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btnSendOTP"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhận mã OTP" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <EditText
            android:id="@+id/edtNum1"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/edtNum2"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/edtNum3"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/edtNum4"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/edtNum5"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/edtNum6"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            tools:ignore="LabelFor" />
    </LinearLayout>
    <Button
        android:id="@+id/btnVerify"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác thực"
        android:visibility="invisible"/>

</LinearLayout>